            <properties>
                <!-- <variable id="Instructions" label="Instructions"> -->
                <!-- </variable> -->
                <set id="children" maxSize="100">
					<dictionary>
						<term id="SET_SIZE_EXCEEDED">Too many members.</term>		
					</dictionary>
					<memberType>
						<reference targetType="*" visualizedAs="CONTAINMENT">
